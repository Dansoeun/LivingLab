<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:background="#9acd32">


    <Button
        android:id="@+id/picture"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:text="picture" />

    <Button
        android:id="@+id/camera"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:text="camera" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp">
        <ImageView
            android:id="@+id/living_paper"
            android:src="@drawable/paper"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_margin="35dp"
            android:contentDescription="TODO" />

        <ImageView
            android:id="@+id/avatars"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/vinyl"
            android:layout_margin="35dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp">

        <ImageView
            android:id="@+id/living_glass"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_margin="35dp"
            android:src="@drawable/glass" />

        <ImageView
            android:id="@+id/living_nomarl"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_margin="35dp"
            android:src="@drawable/normal" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp">

        <ImageView
            android:id="@+id/living_plastic"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_margin="35dp"
            android:src="@drawable/plastic" />

        <ImageView
            android:id="@+id/living_can"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_margin="35dp"
            android:contentDescription="TODO"
            android:src="@drawable/can" />

    </LinearLayout>

</LinearLayout>